<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Agenda_Personal.ConfiguracionPage"
             Title="Configuracion"
             BackgroundColor="{StaticResource FondoColor}">
    <AbsoluteLayout>
        <Label 
            Text="Configuracion"
            TextColor="{StaticResource TextColor}"
            FontSize="Large"
            AbsoluteLayout.LayoutBounds="0.5,0.1,200,30" 
            AbsoluteLayout.LayoutFlags="PositionProportional"/>
        <Switch 
            BackgroundColor="{StaticResource BordeColor}"
            OnColor="#76abff"
            ThumbColor="{StaticResource BotonColor}"
            AbsoluteLayout.LayoutBounds="0.15,0.3,50,30"
            AbsoluteLayout.LayoutFlags="PositionProportional"/>
        
        <Label 
            Text="Activar Noificaciones"
            TextColor="{StaticResource TextColor}"
            AbsoluteLayout.LayoutBounds="0.55,0.305,200,30" 
            AbsoluteLayout.LayoutFlags="PositionProportional"/>
        <Button
            Text="Cambiar tema"
            TextColor="{StaticResource TextColor}"
            BackgroundColor="{StaticResource BotonColor}"
            AbsoluteLayout.LayoutBounds="0.5,0.5,150,40"
            AbsoluteLayout.LayoutFlags="PositionProportional"/>

    </AbsoluteLayout>
</ContentPage>
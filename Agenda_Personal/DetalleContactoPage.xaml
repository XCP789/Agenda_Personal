<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Agenda_Personal.DetalleContactoPage"
             Title="Detalle Contacto"
             BackgroundColor="{StaticResource FondoColor}">
    <VerticalStackLayout>

        <Frame BorderColor="{StaticResource BotonColor}" CornerRadius="15" Padding="10" Margin="30" BackgroundColor="{StaticResource FondoColor}">
            <Grid Padding="20" 
              ColumnDefinitions="Auto,*"
              RowDefinitions="Auto,Auto,Auto,Auto">
                
                <Label Grid.Row="0"
                   Grid.Column="0"
                   Text="Nombre:"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextColor}"/>

                <Label Grid.Row="0"
                   Grid.Column="1"
                   Text="{Binding Nombre}"
                   TextColor="{StaticResource TextColor}"
                   FontSize="Medium"/>

                <Label Grid.Row="1"
                   Grid.Column="0"
                   Text="Telefono:"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextColor}"/>

                <Label Grid.Row="1"
                   Grid.Column="1"
                   Text="{Binding Telefono}"
                   TextColor="{StaticResource TextColor}"
                   FontSize="Medium"/>

                <Label Grid.Row="2"
                   Grid.Column="0"
                   Text="Correo:"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextColor}"/>

                <Label Grid.Row="2"
                   Grid.Column="1"
                   Text="{Binding Correo}"
                   TextColor="{StaticResource TextColor}"
                   FontSize="Medium"/>

                <Label Grid.Row="3"
                   Grid.Column="0"
                   Text="Direccion:"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextColor}"/>

                <Label Grid.Row="3"
                   Grid.Column="1"
                   Text="{Binding Direccion}"
                   TextColor="{StaticResource TextColor}"
                   FontSize="Medium"/>

            </Grid>
        </Frame>
    </VerticalStackLayout>
</ContentPage>